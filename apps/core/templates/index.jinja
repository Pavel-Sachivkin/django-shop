{% extends 'base.jinja' %}
{% block content %}
<div class="container">
    <section class="hero pb-3 bg-cover bg-center d-flex align-items-center" style="background: url(/static/images/hero-banner-alt.jpg)">
        <div class="container py-5">
            <div class="row px-4 px-lg-5">
                <div class="col-lg-6">
                    <p class="text-muted small text-uppercase mb-2">New Inspiration</p>
                    <h1 class="h2 text-uppercase mb-3">New season</h1>
                    <a class="btn btn-dark" href="/shop/catalog">Browse collections</a>
                </div>
            </div>
        </div>
    </section>
    <!-- CATEGORIES SECTION-->
    <section class="pt-5">
        <header class="text-center">
            <p class="small text-muted small text-uppercase mb-1">Carefully created collections</p>
            <h2 class="h5 text-uppercase mb-4">Browse our categories</h2>
        </header>
        <div class="row">
            <div class="col-md-4">
                <a class="category-item" href="/shop/catalog"><img class="img-fluid" src="/media/categories/cat-img-1.jpg" alt="" /><strong class="category-item-title">Clothes</strong></a>
            </div>
            <div class="col-md-4">
                <a class="category-item mb-4" href="/shop/catalog"><img class="img-fluid" src="/media/categories/cat-img-2.jpg" alt="" /><strong class="category-item-title">Shoes</strong></a>
                <a class="category-item" href="/shop/catalog"><img class="img-fluid" src="/media/categories/cat-img-3.jpg" alt="" /><strong class="category-item-title">Watches</strong></a>
            </div>
            <div class="col-md-4">
                <a class="category-item" href="/shop/catalog"><img class="img-fluid" src="/media/categories/cat-img-4.jpg" alt="" /><strong class="category-item-title">Electronics</strong></a>
            </div>
        </div>
    </section>
    <!-- TRENDING PRODUCTS-->
    <section class="py-5">
        <header>
            <p class="small text-muted small text-uppercase mb-1">Made the hard way</p>
            <h2 class="h5 text-uppercase mb-4">Top trending products</h2>
        </header>
        <div class="row">
            {% for product in random_products %}
                <div class="col-xl-3 col-lg-4 col-sm-6">
                    <div class="product text-center">
                        <div class="position-relative mb-3">
                            <div class="badge text-white bg-"></div>
                            <a class="d-block" href="/shop/product/{{product.id}}"><img class="img-fluid w-100" src="/{{product.image}}" alt="{{product.name}}" /></a>
                        </div>
                        <h6><a class="reset-anchor" href="/shop/product/{{product.id}}">{{product.name}}</a></h6>
                        <p class="small text-muted">${{product.price}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <!-- SERVICES-->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center gy-3">
                <div class="col-lg-4">
                    <div class="d-inline-block">
                        <div class="d-flex align-items-end">
                            <img class="svg-icon svg-icon-big svg-icon-light" src="/static/images/delivery.svg" />
                            <div class="text-start ms-3">
                                <h6 class="text-uppercase mb-1">Free shipping</h6>
                                <p class="text-sm mb-0 text-muted">Free shipping worldwide</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-inline-block">
                        <div class="d-flex align-items-end">
                            <img class="svg-icon svg-icon-big svg-icon-light" src="/static/images/phone.svg" />
                            <div class="text-start ms-3">
                                <h6 class="text-uppercase mb-1">24 x 7 service</h6>
                                <p class="text-sm mb-0 text-muted">Free shipping worldwide</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-inline-block">
                        <div class="d-flex align-items-end">
                            <img class="svg-icon svg-icon-big svg-icon-light" src="/static/images/sale.svg" />
                            <div class="text-start ms-3">
                                <h6 class="text-uppercase mb-1">Festivaloffers</h6>
                                <p class="text-sm mb-0 text-muted">Free shipping worldwide</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock content %}
